# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/reservations_db
DB_USERNAME=reservations_user
DB_PASSWORD=reservations_pass
DB_POOL_SIZE=10

# JPA/Hibernate Settings
DDL_AUTO=validate
SHOW_SQL=false
FORMAT_SQL=false

# Server Configuration
SERVER_PORT=8080

# Logging Levels
LOG_LEVEL_WEB=INFO
LOG_LEVEL_HIBERNATE=WARN
LOG_LEVEL_APP=INFO

# Spring Profile (dev, prod, docker)
SPRING_PROFILES=prod
